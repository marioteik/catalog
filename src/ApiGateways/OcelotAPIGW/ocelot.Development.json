{
  "Routes": [
    // Catalog API
    {
      "DownstreamPathTemplate": "/api/v1/Catalog",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/Catalog",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT"
      ]
      // Needed Production Configurations
      //      "FileCacheOptions": {
      //        "CacheExpirationInSeconds": 30
      //      }
      // OR
      //      "RateLimitOptions": {
      //        "ClientWhitelist": [],
      //        "EnableRateLimiting": true,
      //        "Period": "5s",
      //        "Limit": 1,
      //        "PeriodTimespan": 1
      //      }
    },
    {
      "DownstreamPathTemplate": "/api/v1/Catalog/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/Catalog/{id}",
      "UpstreamHttpMethod": [
        "GET",
        "DELETE"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Catalog/GetProductByName/{name}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/Catalog/GetProductByName/{name}",
      "UpstreamHttpMethod": [
        "GET"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Catalog/GetProductByCategory/{category}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/Catalog/GetProductByCategory/{category}",
      "UpstreamHttpMethod": [
        "GET"
      ]
    },
    // Basket API
    {
      "DownstreamPathTemplate": "/api/v1/Basket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "basket.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/Basket",
      "UpstreamHttpMethod": [
        "POST"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Basket/{buyerId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "basket.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/Basket/{buyerId}",
      "UpstreamHttpMethod": [
        "GET",
        "DELETE"
      ]
    },
    // Homepage Aggregartor
    {
      "DownstreamPathTemplate": "/api/v1/HomePage/{userId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "homepage.aggregator",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/HomePage/{userId}",
      "UpstreamHttpMethod": [
        "GET"
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4200"
  }
}